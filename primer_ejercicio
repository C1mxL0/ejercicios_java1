import java.util.Scanner;

public class Superficie {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // Solicitar la longitud de la habitación
        System.out.println("Ingrese la longitud de la habitación: ");
        int longitud = sc.nextInt();

        // Solicitar la anchura de la habitación
        System.out.println("Ingrese la anchura de la habitación: ");
        int anchura = sc.nextInt();

        // Calcular la superficie de la habitación
        int superficie = longitud * anchura;

        // Visualizar la superficie de la habitación
        System.out.println("La superficie de la habitación es de " + superficie + " metros cuadrados.");
    }
}
